@using PerculusReport.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Program İstatistik</title>
</head>
<body>
    <div class="container body-content">

        <div class="widget-box">
            <div class="widget-header"><h4><i class="fa fa-users blue"></i> <span>Tüm Programlar</span></h4></div>
            <div class="widget-body">
                <div class="widget-main">
                    <div class="row-fluid">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Program</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <tr>
                                        <td style="width:10%; vertical-align:middle">ProgramName</td>
                                        <td style="width:90%; vertical-align:central">
