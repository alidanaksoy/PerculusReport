@using PerculusReport.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Program İstatistik</title>
</head>
<body>
        <div class="container">

        <div class="widget-box">
            <div class="widget-header"><h4><i class="fa fa-users blue"></i> <span>Tüm Programlar</span></h4></div>
            <div class="widget-body">
                <div class="widget-main">
                    <div class="row-fluid">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Program</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var p in ((List<ProgramStats_Result>)ViewBag.Programs))
                            {
                                <tr>
                                    <td style="width:30%; vertical-align:middle;" class="HTool">
                                        @Html.ActionLink(p.PROGRAMNAME, "CourseStats2/" + p.PROGRAMID, "Perculus")                                        
                                    </td>
                                    <td style="width:70%;">
                                        @if (@p.PROGRESS < 100 && @p.PROGRESS > 0)
                                        {
                                            <div class="progress" style="margin-bottom:0;  height:30px;" data-toggle="tooltip" data-placement="left" title="">
                                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="@p.PROGRESS" aria-valuemin="0" aria-valuemax="100" style="width:@p.PROGRESS.ToString().Replace(",",".")%; min-width: 6%; font-size:14px; text-align:right; line-height:32px;">
                                                    % @p.PROGRESS &nbsp;
                                                </div>
                                            </div>
                                        }
                                        else if (@p.PROGRESS > 100)
                                        {
                                            <div class="progress" style="margin-bottom:0;  height:30px;" data-toggle="tooltip" data-placement="left" title="">
                                                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="@p.PROGRESS" aria-valuemin="0" aria-valuemax="100" style="width:@p.PROGRESS.ToString().Replace(",",".")%; font-size:14px; text-align:right; line-height:32px;">
                                                    % @p.PROGRESS &nbsp;
                                                </div>
                                            </div>
                                        }
                                        else if (@p.PROGRESS == 100)
                                        {
                                            <div class="progress" style="margin-bottom:0; height:30px;" data-toggle="tooltip" data-placement="left" title="">
                                                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="@p.PROGRESS" aria-valuemin="0" aria-valuemax="100" style="width:@p.PROGRESS.ToString().Replace(",",".")%; font-size:14px; text-align:right; line-height:32px;">
                                                    % @p.PROGRESS &nbsp;
                                                </div>
                                            </div>
                                        }
                                        else if (@p.PROGRESS == 0)
                                        {
                                            <div class="progress" style="margin-bottom:0; height:30px;" data-toggle="tooltip" data-placement="left" title="">
                                                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="@p.PROGRESS" aria-valuemin="0" aria-valuemax="100" style="width:100%;  background-color:#E8E8E8; font-size:14px; text-align:center; line-height:32px;">
                                                    % @p.PROGRESS &nbsp;
                                                </div>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                                    
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="widget-box widget-color-blue">
                <div class="widget-header">
                    <h5>
                        <i class="fa fa-cog white"></i>
                        <span>
                            Açıklamalar
                        </span>
                    </h5>
                </div>
                <div class="widget-body">
                    <div class="widget-main">
                        <div class="row-fluid">
                            <ul class="list-group">                          
                                <li class="list-group-item">1 - Her programın yüzdelik ilerlemesi <span class="label label-success label-white middle">Programın Derslerine Ait Toplam Yüzdelik İlerleme / Ders Sayısı</span> şeklinde hesaplanır.</li>
                                <li class="list-group-item">2 - Programın herhangi bir dersine ait ilerleme yüzdesi 100% sınırını geçmişse toplam program yüzdelik ilerlemesi bulunurken bu dersin ilerleme yüzdesi 100% olarak alınır.</li>
                                <li class="list-group-item">3 - Programlara ait Proje,Staj I, Staj II ve Bitirme Çalışması dersleri listeye dahil edilmemiştir.</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</body>
</html>
