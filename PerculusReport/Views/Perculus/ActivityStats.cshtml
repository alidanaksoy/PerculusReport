@using PerculusReport.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ders Aktivite</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container" style="font-size:16px; text-align:left; line-height:45px;">
        <h3>@ViewBag.CourseName (Ders)</h3><br />
        @*<p>The contextual classes colors the progress bars:</p>*@
        <div class="row">
            @foreach (var p in ((List<ActivityStats_Result>)ViewBag.Activities))
            {
                if (@p.Progress == 0)
                {
                    @*<div class="col-lg-3">@p.ACTIVITYNAME</div>*@
                    <div class="col-lg-3">@p.Week . Hafta</div>
                    <div class="progress" style="height:40px;">
                        <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="@p.Progress" aria-valuemin="0" aria-valuemax="100" style="width:@p.Progress%; font-size:14px; text-align:right; line-height:45px; color:#333;">
                            @p.Progress %
                        </div>
                    </div>
                }
                else if (@p.Progress == 100)
                {
                    @*<div class="col-lg-3">@p.ACTIVITYNAME</div>*@
                    <div class="col-lg-3">@p.Week . Hafta</div>
                    <div class="progress" style="height:40px; ">
                        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%; font-size:14px; text-align:right; line-height:45px;">
                            @p.Progress %&nbsp;

                        </div>
                    </div>

                }
                else if (@p.Progress >= 100)
                {
                    @*<div class="col-lg-3">@p.ACTIVITYNAME</div>*@
                    <div class="col-lg-3">@p.Week . Hafta</div>
                    <div class="progress" style="height:40px; ">
                        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%; font-size:14px; text-align:right; line-height:45px;">
                            <span class="label-info">@p.Progress %&nbsp;</span>
                            
                        </div>
                    </div>

                }
                else
                {
                    @*<div class="col-lg-3">@p.ACTIVITYNAME</div>*@
                    <div class="col-lg-3">@p.Week . Hafta</div>
                    <div class="progress" style="height:40px; ">
                        <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="@p.Progress" aria-valuemin="0" aria-valuemax="100" style="width:@p.Progress%; font-size:14px; text-align:right; line-height:45px;">
                            @p.Progress %&nbsp;                            
                        </div>
                    </div>
                }

            }
        </div>
        @*<div class="progress">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
                40% Complete (success)
            </div>
        </div>
        <div class="progress">
            <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:50%">
                50% Complete (info)
            </div>
        </div>
        <div class="progress">
            <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:60%">
                60% Complete (warning)
            </div>
        </div>
        <div class="progress">
            <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%">
                70% Complete (danger)
            </div>
        </div>*@
    </div>
</body>
</html>
